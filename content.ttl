reliedu-content:gotteslehre a skos:Concept ;
    skos:inScheme <https://w3id.org/reliedu/content/> ;
    skos:topConceptOf <https://w3id.org/reliedu/content/> ;
    skos:prefLabel "Gotteslehre"@de, "Doctrine of God"@en ;
    skos:definition "Theologische Reflexion über Gott, Gottesbilder und Gotteserfahrungen."@de ;
    skos:definition "Theological reflection on God, images of God and experiences of God."@en ;
    skos:scopeNote "Umfasst Theodizee, Trinität, Gottesvorstellungen und spirituelle Erfahrungen."@de ;
    skos:notation "GOTT" ;
    dct:created "2025-10-14"^^xsd:date .

