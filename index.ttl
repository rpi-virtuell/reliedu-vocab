    skos:broader reliedu-didactics: ;
    skos:prefLabel "Performativer Religionsunterricht"@de, 
                   "Performative Religious Education"@en ;
    skos:altLabel "Performatives Lernen"@de,
                  "Learning by Doing"@en ;
